<body>

  <form action="/login" method="post" class="my-forms">
    <a href="/"><h1>RussianResaler</h1></a>
      <h2>Вход</h2>
      <label for="example-email-input" class="col-form-label">Адрес электронной почты</label>
        <input class="form-control" type="text" id="example-email-input" placeholder="email" name="email" required>


      <label for="example-password-input" class="col-form-label">Пароль</label>
        <input class="form-control" type="password" placeholder="password" id="example-password-input" name="password" required>

        <br>
      <button type="submit" class="btn btn-primary">Войти</button>
      <a href="/sign"><button type="button" class="btn btn-success">Перейти к регистрации</button></a>

      <br>
      <p style="color: red;"><%= mess %></p>

  </form>





